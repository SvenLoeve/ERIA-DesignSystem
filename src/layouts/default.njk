<!DOCTYPE html>
<html lang="en">

<head>

	<!-- Recommended -->
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<!-- Meta -->
	<meta name="description" content="{{ description if description else site.description }}" />
	<meta name="generator" content="{{ eleventy.generator }}" />

	<!-- Icons -->
	<link rel="apple-touch-icon" sizes="180x180" href="{{ '/img/icons/apple-touch-icon.png' | url }}">
	<link rel="icon" type="image/png" sizes="32x32" href="{{ '/img/icons/favicon-32x32.png' | url }}">
	<link rel="icon" type="image/png" sizes="16x16" href="{{ '/img/icons/favicon-16x16.png' | url }}">
	<link rel="manifest" href="{{ '/img/icons/site.webmanifest' | url }}">
	<link rel="mask-icon" href="{{ '/img/icons/safari-pinned-tab.svg' | url }}" color="#9e7e0f">
	<link rel="shortcut icon" href="{{ '/favicon.ico' | url }}">
	<meta name="msapplication-TileColor" content="#fbfb7f">
	<meta name="msapplication-config" content="{{ '/img/icons/browserconfig.xml' | url }}">
	<meta name="theme-color" content="#fbfb7f">

	<!-- Open Graph -->
	<meta property="og:title" content="{{ title }}" />
	<meta property="og:description" content="{{ description if description else site.description }}" />
	<meta property="og:image" content="{{ site.url }}/img/og-image.jpg" />
	<meta property="og:url" content="{{ site.url + page.url }}" />
	<meta name="twitter:card" content="summary_large_image" />

	<title>{{ title }}</title>

	<link rel="stylesheet" href="{{ '/site.css' | url }}" />
	<link rel="stylesheet" href="https://rsms.me/inter/inter.css">
	{% if mermaid %}
		<script src="https://cdn.jsdelivr.net/npm/mermaid@11.2.1/dist/mermaid.min.js"></script>
		<script>
			mermaid.initialize({ startOnLoad: true, theme: "base" });
		</script>
	{% endif %}
</head>

<body class="">

	<div class="">
		<div class="drawer lg:drawer-open"> <!-- Root drawer container -->
			<input id="drawer" type="checkbox" class="drawer-toggle"/> <!-- Drawer toggle -->
			<div class="drawer-content"> <!-- Page content -->

				<!-- Navbar -->
				<nav class="navbar justify-between bg-base-300">
					<!-- Logo -->
					<span class="tooltip tooltip-bottom before:text-xs before:content-[attr(data-tip)]" data-tip="Menu">
						<label
							aria-label="Open menu" for="drawer" class="btn btn-square btn-ghost drawer-button lg:hidden "><svg width="20"
								height="20" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
								class="inline-block h-5 w-5 stroke-current md:h-6 md:w-6">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
							</svg>
						</label>
					</span>

					<!-- Menu for mobile -->
					<div class="dropdown dropdown-end lg:hidden">
						<button class="btn btn-ghost">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
								<path stroke-linecap="round" stroke-linejoin="round" d="M12 6.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5ZM12 12.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5ZM12 18.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5Z" />
							  </svg>							  
						</button>

						<ul tabindex="0" class="dropdown-content menu z-[1] bg-base-200 p-6 rounded-box shadow w-56 gap-2">
							<li>
								<a class="active">
									option 1
								</a>
							</li>
							<li>
								<a>
									option 2
								</a>
							</li>
							<li>
								<a>
									option 3
								</a>
							</li>
						</ul>
					</div>

					<!-- Menu for desktop -->
					<div role="tablist" class="hidden lg:tabs tabs-boxed">
						<a role="tab" class="tab gap-2">
							<i class="fa-solid fa-table"></i>
							Light
						</a>
						<a role="tab" class="tab tab-active gap-2">
							<i class="fa-solid fa-circle-nodes"></i>
							Dark
						</a>
					</div>
				</nav>

				<!-- Page content -->
				<div class="max-w-[100vw] px-6 pb-16 xl:pr-2">
					<main class="prose prose-sm md:prose-base w-full max-w-4xl flex-grow pt-10"">
						{{ content | safe }}
					</main>
				</div>


			</div>
			<nav class="drawer-side">
				<label for="drawer" aria-label="close sidebar" class="drawer-overlay"></label>
				<ul class="menu text-base-content min-h-screen bg-base-100 w-60 p-4">
					<!-- Sidebar content -->
					<a href="{{ '../' | url }}" class="btn btn-ghost">
						Eria Design System
					</a>

					<li class="menu-title">Fundamentals</li>
					<li><a href="{{ '/methodology' | url }}">Methodology</a></li>
					<li><a href="{{ '/accessibility' | url }}">Accessibility</a></li>
					<li><a href="{{ '/colors' | url }}">Colors</a></li>
					<li><a href="{{ '/typography' | url }}">Typography</a></li>
					<li><a href="{{ '/icons' | url }}">Icons</a></li>
					
					<li class="menu-title">Atoms (components)</li>
					<li><a href="{{ '/buttons' | url }}">Buttons</a></li>
					<li><a href="{{ '/inputs' | url }}">Inputs</a></li>
					
					<li class="menu-title">Molecules</li>
					<li><a href="{{ '/dropdown' | url }}">Dropdown</a></li>
					<li><a href="{{ '/tabs' | url }}">Tabs</a></li>
					<li><a href="{{ '/cards' | url }}">Cards</a></li>
					<li><a href="{{ '/modals' | url }}">Modals</a></li>
					
					<li class="menu-title">Organisms</li>
					<li><a href="{{ '/navbar' | url }}">Navbar</a></li>
					<li><a href="{{ '/sidebar' | url }}">Sidebar</a></li>
					<li><a href="{{ '/footer' | url }}">Footer</a></li>
				</ul>
			</nav>
		</div>
	</div>
</body>

</html>